<div class="ButtonPrimary">
    <div class="ButtonPrimary__Shadow"></div>
    <button class="ButtonPrimary__Foreground">
        <p>
            @if (ChildContent is not null) {
                @ChildContent
            }
        </p>
    </button>
</div>

@code {
    [Parameter] public RenderFragment? ChildContent { get; set; }
}